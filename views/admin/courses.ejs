  <% }) %>
</div>



  <% for (let pathway in groupedCourses) { %>
  <div class="pathway-group" data-pathway="<%= pathway %>">
    <h2 style="margin-top: 2rem; color: goldenrod;"><%= pathway %></h2>

    <% for (let level in groupedCourses[pathway]) { %>
      <div class="course-level-section" data-level="<%= level %>">
        <h3 style="margin-top: 1rem; color: #444;"><%= level %> Level</h3>
        <div class="section">
          <section class="course-scroll-container">
            <% groupedCourses[pathway][level].forEach(course => { %>
              <div class="article-card scroll-card">
                <% if (course.thumbnail_url) { %>
                  <img src="<%= course.thumbnail_url %>" alt="Course Thumbnail"  />
                <% } %>

                <h4><%= course.title %></h4>
                <div class="article-body" id="desc-<%= course.id %>" data-full="<%- course.description.replace(/"/g, '&quot;') %>">
                  <%- course.description.substring(0, 30) %>...
                </div>

                <a href="javascript:void(0);" class="toggle-article" onclick="togglePathway(<%= course.id %>)">Show More</a> <br>
                <small><strong>Price: </strong> ₦ <%= course.amount %></small>
                <div class="article-buttons">
                  <button class="btn-edit" onclick="openEditModal(<%= course.id %>)">Edit</button>
                  <form action="/admin/courses/delete/<%= course.id %>" method="POST" onsubmit="return confirm('Delete this course?');">
                    <button class="btn-delete" type="submit">Delete</button>
                  </form>
                </div>
              </div>

              <!-- Edit Modal for this course -->
              <div id="editModal-<%= course.id %>" class="modal">
                <div class="modal-content">
                  <span class="close" onclick="closeEditModal(<%= course.id %>)">&times;</span>
                  <h2>Edit Course</h2>
                  <form action="/admin/courses/edit/<%= course.id %>" method="POST" enctype="multipart/form-data">
                    <input type="text" name="title" value="<%= course.title %>" required /><br />
                    <!-- <textarea id="content" name="description"><%- course.description %></textarea><br /> -->
                    <textarea id="editContent-<%= course.id %>" name="description"><%- course.description %></textarea>

                    <select name="level" required>
                      <option value="">Select Level</option>
                      <option value="Beginner" <%= course.level === 'Beginner' ? 'selected' : '' %>>Beginner</option>
                      <option value="Intermediate" <%= course.level === 'Intermediate' ? 'selected' : '' %>>Intermediate</option>
                      <option value="Advanced" <%= course.level === 'Advanced' ? 'selected' : '' %>>Advanced</option>
                    </select><br /><br>

                    <select name="career_pathway_id" required>
                      <option value="">-- Career Pathway --</option>
                      <% careerPathways.forEach(path => { %>
                        <option value="<%= path.id %>" <%= path.id === course.career_pathway_id ? 'selected' : '' %>><%= path.title %></option>
                      <% }) %>
                    </select><br /><br>

                    <label for="">Sort Number</label>
                    <input type="number" name="sort_order" value="<%= course.sort_order %>" /><br />

                    <% if (course.thumbnail_url) { %>
                      <img src="<%= course.thumbnail_url %>" width="100" /><br />
                    <% } %>
                    <input type="file" name="thumbnail" /><br />
                    <div class="container" id="amountContainer">
                      <input
                        type="number"
                        name="amount"
                        step="0.01"
                        placeholder="Amount in ₦"
                        value="<%= course.amount || '' %>"
                      /><br />
                    </div>
                    
                    <button type="submit">Update Course</button>
                  </form>
                </div>
              </div>

            <% }) %>
          </section>
        </div>
      </div>
    <% } %>
  </div>
<% } %>




