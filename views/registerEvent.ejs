<script>
  function generateNameFields() {
    const numPeople = parseInt(document.getElementById('num_people').value) || 1;
    const container = document.getElementById('peopleFields');
    container.innerHTML = "";

    for (let i = 1; i <= numPeople; i++) {
      const label = document.createElement('label');
      label.textContent = `Full Name for Person ${i}:`;

      const input = document.createElement('input');
      input.type = "text";
      input.name = `child_name_${i}`;
      input.placeholder = `Person ${i} Full Name`;
      input.required = true;

      container.appendChild(label);
      container.appendChild(input);
    }
  }

  // Auto-generate default person field on page load
  document.addEventListener("DOMContentLoaded", generateNameFields);
</script>


